datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  @@map("users")
  id Int @id @default(autoincrement())
  email String? @unique
  username String @unique
  name String
  ghToken String?
  avatar String?
  sponsorWebhookSecret String? @unique
}

model Tier {
  @@map("tiers")
  id Int @id @default(autoincrement())
  title String
  description String
  minAmount Int
  repositories Repository[]
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Repository {
  @@map("repositories")
  id Int @id @default(autoincrement())
  name String
  tierId Int?
  tier Tier? @relation(fields: [tierId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
  @@unique([userId, name])
  @@index([userId, name])
}
